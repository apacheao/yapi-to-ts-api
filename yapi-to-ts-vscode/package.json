{
  "name": "yapi-to-ts-vscode",
  "displayName": "YAPI TypeScript Generator",
  "description": "Generate TypeScript definitions and API requests from YAPI",
  "version": "0.1.0",
  "publisher": "zhiqiangao",
  "author": {
    "name": "zhiqiang.ao",
    "email": "ao_zhiqiang@163.com"
  },
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:yapi-to-ts.generateFromConfig",
    "onCommand:yapi-to-ts.createConfig",
    "onCommand:yapi-to-ts.generateWithWizard"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "yapi-to-ts.generateFromConfig",
        "title": "YAPI: 从配置文件生成API"
      },
      {
        "command": "yapi-to-ts.createConfig",
        "title": "YAPI: 创建配置文件"
      },
      {
        "command": "yapi-to-ts.generateWithWizard",
        "title": "YAPI: 使用向导生成API"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "when": "resourceFilename == yapi-config.json",
          "command": "yapi-to-ts.generateFromConfig",
          "group": "yapi"
        },
        {
          "command": "yapi-to-ts.createConfig",
          "group": "yapi"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/vscode": "^1.60.0",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.2",
    "@types/node": "14.x",
    "eslint": "^7.27.0",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "glob": "^7.1.7",
    "mocha": "^8.4.0",
    "typescript": "^4.3.2",
    "vscode-test": "^1.5.2"
  },
  "dependencies": {
    "axios": "^0.21.1"
  }
} 